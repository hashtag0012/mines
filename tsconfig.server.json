{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "noEmit": false,

    "rootDir": ".",
    "outDir": "./build",

    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",

    "lib": ["ES2022"],
    "types": ["node"],

    "allowImportingTsExtensions": false
  },
  "include": ["server/**/*", "shared/**/*"],
  "exclude": ["client", "dist", "node_modules"]
}
